services:
  api:
    build:
      context: .
      dockerfile: Dockerfile.api
    container_name: rag_api
    restart: always
    env_file: .env
    networks:
      - ragnet
    ports:
      - "8000:8000"
    volumes:
      - ./artifacts:/app/artifacts
      - ./data:/app/data
      - ./logs:/app/logs

  dashboard:
    build:
      context: .
      dockerfile: Dockerfile.dashboard
    container_name: rag_dashboard
    restart: always
    env_file: .env
    networks:
      - ragnet
    ports:
      - "8501:8501"
    depends_on:
      - api

  nginx:
    image: nginx:alpine
    container_name: rag_nginx
    restart: always
    networks:
      - ragnet
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - api
      - dashboard

  prometheus:
    image: prom/prometheus
    container_name: rag_prometheus
    restart: always
    networks:
      - ragnet
    volumes:
      - ./monitoring/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - ./monitoring/prometheus/alert_rules.yml:/etc/prometheus/alert_rules.yml
    ports:
      - "9090:9090"
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--web.enable-lifecycle'

  alertmanager:
    image: prom/alertmanager
    container_name: rag_alertmanager
    restart: always
    networks:
      - ragnet
    ports:
      - "9093:9093"
    volumes:
      - ./monitoring/alertmanager/config.yml:/etc/alertmanager/config.yml

  grafana:
    image: grafana/grafana
    container_name: rag_grafana
    restart: always
    networks:
      - ragnet
    ports:
      - "3000:3000"
    depends_on:
      - prometheus

networks:
  ragnet:
    driver: bridge

  otel-collector:
    image: otel/opentelemetry-collector:latest
    container_name: rag_otel
    restart: always
    networks:
      - ragnet
    ports:
      - "4318:4318"
    volumes:
      - ./monitoring/otel/collector.yaml:/etc/otel/collector.yaml
    command: ["--config=/etc/otel/collector.yaml"]
